@model Springboard.Models.ApplicationUser

@{
    ViewBag.Title = "SeekerDashboard";
}
<link href="@Url.Content("~/Content/Seeker/index.css")" rel="stylesheet" type="text/css" />
<h2>Dashboard</h2>

<div class="container">
    <div class="row row-offcanvas row-offcanvas-right">
        <div class="col-xs-12">
            <p class="pull-xs-right hidden-sm-up">

            </p>


            <div class="row">
                <div class="col-xs-3">
                    <img id="profPic"src="~/Images/storm_trooper.jpg" height="190" width="180">
                    <p id="userName"> 
                        <strong> User Name </strong> 
                        <br /> 
                        @Html.DisplayFor(model => model.FirstName)
                        @Html.DisplayFor(model => model.LastName)
                    <p>
                        <hr />
                </div><!--/span-->

            <div id="rightHandSide">
                <div class="col-xs-6" id="welcome">
                    <h2>Welcome to the Dashboard!</h2>
                    <p>Below you should rate yourself in culture and skills. This will be used to match you to a company.</p>
                </div><!--/span-->

                <div class="col-xs-3  sidebar-offcanvas" id="sidebar">
                    <form method="get" action="/JobsPage/Index">
                        <input type="submit" class="btn btn-primary" value="View Job Matches" />
                    </form>
                </div>
                </div>
            </div><!--/row-->



            <div class="row">
                <div class="col-xs-3">
                    <h2>Contact</h2>
                    <p><strong>@Html.DisplayNameFor(model => model.Email)</strong> <br> @Html.DisplayFor(model => model.Email) </p>
                    <p><a class="btn btn-secondary" href="#" role="button">Edit »</a></p>
                </div><!--/span-->

            


            
                
                <div class="col-xs-9 bucket_large">
                    <h2>Skills</h2>
                    <div class="fluid-container">
                        <div class="row">
                        @if (Model != null &&
                            Model.SeekerAccount != null)
                        {
                            @Html.Action("SeekerAccountPartial", Model.SeekerAccount);
                        }
                        </div>
                    </div>
                </div>
            </div>
        </div><!--/span-->


        


    </div>
</div>

<div>
    <hr />
    @Html.ActionLink("Account Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
</div>
